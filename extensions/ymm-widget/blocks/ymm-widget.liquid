{% schema %}
{
  "name": "Year Make Model Widget",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "results_page_url",
      "label": "Search Results redirect URL",
      "info": "URL of the page containing the search results block (e.g., /search). Leave empty if results block is on same page.",
      "default": "/search"
    },
    {
      "type": "color",
      "id": "widget_background_color",
      "label": "Background Color",
      "info": "Sets the color of the year, make, and model widget",
      "default": "#eeeeee"
    }
  ]
}
{% endschema %}