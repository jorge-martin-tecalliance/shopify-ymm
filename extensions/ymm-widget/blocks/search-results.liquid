<!-- Vehicle Parts Search Results Block -->
<div id="search-results" class="hidden">

  <div class="search-container">
    <!-- Left Sidebar Filters -->
    {% render 'parts-filter' %}

    <!-- Main Results Area -->
    <div class="results-area">
      <div id="error-message" style="display: none;"></div>

      <div id="results-summary"></div>
      
      <div id="parts-results"></div>
    </div>
  </div>

  <div class="back-to-top-wrapper">
    <div class="back-to-top-btn" onClick="backToTop()">
      <i class="fa-solid fa-arrow-up"></i>
    </div>
    <div class="back-to-top-text">
      back to top
    </div>
  </div>

</div>

{{ 'search-results.css' | asset_url | stylesheet_tag }}
{{ 'parts-filter.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<script src="{{ 'parts-filter.js' | asset_url }}"></script>
<script src="{{ 'search-results.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Parts Search Results",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Page Heading",
      "default": "Vehicle Parts Search Results"
    }
  ]
}
{% endschema %}