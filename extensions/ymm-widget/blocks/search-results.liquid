<!-- Vehicle Parts Search Results Block -->
<div id="search-results" class="hidden">

  <div class="search-container">
    
    <!-- Left Sidebar Filters -->
    {% render 'parts-filter' %}

    <!-- Main Results Area -->
    <div class="results-area">
      <div id="loading-message">Loading parts...</div>
      <div id="error-message" style="display: none;"></div>
      
      <div id="results-summary"></div>
      
      <div id="parts-results"></div>
    </div>
  </div>
</div>

{{ 'search-results.css' | asset_url | stylesheet_tag }}
{{ 'parts-filter.css' | asset_url | stylesheet_tag }}

<script src="{{ 'search-results.js' | asset_url }}" defer></script>
<script src="{{ 'parts-filter.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Parts Search Results",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Page Heading",
      "default": "Vehicle Parts Search Results"
    },
    {
      "type": "text",
      "id": "results_page_url",
      "label": "Results Page URL",
      "info": "URL where this block is placed (e.g., /pages/search-results). Leave empty if on same page as search widget.",
      "default": "/pages/search-results"
    }
  ]
}
{% endschema %}